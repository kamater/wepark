  <div class="row">
    <div class="col-8 py-3 px-3" style="background-color: white; border-radius: 10px; height: 100px;">
      <h5>Ce garage vous appartient  <%= @garage.user.first_name %>, que souhaitez-vous faire ?</h5>
      <div class="bouton-proprio d-flex">
        <%= link_to 'Modifier mon annonce', edit_garage_path(@garage), class: "btn btn-warning mr-3" %>
        <%= link_to 'Supprimer mon annonce', garage_path(@garage), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
