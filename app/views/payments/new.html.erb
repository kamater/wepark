<div class="container">
  <div class="row py-4 d-flex">
    <div class="col-md-3"><%= cl_image_tag @order.garage.photo, width: '500', height: '100%' %></div>
    <div class="col" style=" margin-left: 269px;">
      <h1>Votre r√©servation de garage</h1>
      <p><i class="fas fa-cube"></i> <%= @order.garage.capacity %> m2</p>
      <p><i class="fas fa-user-check"></i>   <%= @order.garage.user.first_name %></p>
      <p><i class="fas fa-phone"></i>     <%= @order.garage.user.phone_number %></p>
      <p><i class="fas fa-compass"></i>     <%= @order.garage.location %>, <%= @order.garage.city %></p>
      <p>for <strong><%= humanized_money_with_symbol @order.amount / 100 %></strong></p>
      <button id="pay" class="btn btn-primary">Payer</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
