  <div class="form-login">
  <div class="row"style=" text-align: center; margin: auto;">
    <div class="col-12 col-sm-offset-4 px-4">
      <h4>Modifier votre annonce</h4><br>
      <%= simple_form_for @garage do |f| %>
        <%= f.input :capacity, label: 'Surface en m2' %>
        <%= f.input :price, label: 'Prix (/mois)' %>
        <%= f.input :description %>
        <%= f.input :location, label: 'N° et nom de rue' %>
        <%= f.input :city, label: 'Ville' %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Modification terminée" %>
      <% end  %>
   </div>
  </div>
</div>
