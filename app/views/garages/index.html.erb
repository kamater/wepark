<div class="row d-flex mx-3 my-3">

    <div class="col-6 garages-list ml-3">

        <% @garages.each do |garage| %>

          <%= render 'shared/garagecard', garage: garage %>

        <% end %>

    </div>
    <div id="map"
         class="olimap"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
</div>
