<div class="row d-flex mx-3 my-3">

    <div class="col-7 garages-list">

        <% markers = [] %>

        <% @garages.each do |garage| %>

          <%  markers << { lat: garage.latitude, lng: garage.longitude } %>

          <%= render 'shared/garagecard', garage: garage %>

        <% end %>

    </div>
    <div id="map"
         class="olimap"
         data-markers="<%= markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
</div>
