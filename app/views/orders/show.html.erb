<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @order.rental.garage.photo, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>GARAGE</strong> <%= @order.rental.garage.location%> </li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount / 100 %></li>
        </li>
      </ul>
      <p> <strong>Thanks for you trust</strong></p>
    </div>
  </div>
</div>
